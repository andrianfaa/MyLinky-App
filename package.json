{
  "name": "mylinky-app_backend",
  "version": "1.1.0",
  "description": "MyLinky is a website application that is useful for grouping your url links, and makes it easier for you to market your products, business, work, etc.",
  "main": "index.js",
  "scripts": {
    "start-dev": "cross-env NODE_ENV=development nodemon server.ts",
    "start": "NODE_ENV=production node dist/server.js",
    "build": "tsc -p tsconfig.json && cp -r ./src/config/.env.production ./dist/src/config/.env.production",
    "commit": "git add . && lint-staged && cz",
    "postinstall": "npm install commitizen --save-dev && npm run commit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrianfaa/MyLinky-App.git"
  },
  "keywords": [
    "Link",
    "Biolink",
    "Biolinky",
    "MyLink"
  ],
  "author": "https://github.com/andrianfaa",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/andrianfaa/MyLinky-App/issues"
  },
  "homepage": "https://github.com/andrianfaa/MyLinky-App#readme",
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^17.0.32",
    "@types/toobusy-js": "^0.5.2",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.15.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.26.0",
    "lint-staged": "^12.4.1",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "firebase-admin": "^10.2.0",
    "helmet": "^5.0.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.3.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.4",
    "toobusy-js": "^0.5.1"
  },
  "lint-staged": {
    "**/*.{ts,d.ts}": [
      "eslint --config ./.eslintrc.json --fix"
    ],
    "**/*.json": [
      "prettier --config ./.prettierrc.json --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
